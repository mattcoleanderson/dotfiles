#!/usr/bin/env zsh
####################################################################################################
#                                                                                                  #
#                                       Applications & Tools                                       #
#                                                                                                  #
####################################################################################################
#          For configuring all third-party apps and tools. This file is sourced by zshrc           #
####################################################################################################

# +------------------------------------------------------------------------------------------------+
# |                                            Homebrew                                            |
# +------------------------------------------------------------------------------------------------+
# Add Homebrew downloaded applications to the PATH
PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"

# +------------------------------------------------------------------------------------------------+
# |                                             Python                                             |
# +------------------------------------------------------------------------------------------------+
# +---------------+
# |     Pyenv     |
# +---------------+
export PYENV_ROOT="$XDG_DATA_HOME"/pyenv                           # Configure XDG compliance
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH" # Add pyenv command to PATH
eval "$(pyenv init -)"                                             # Initialize pyenv

# +----------------+
# | Python History |
# +----------------+

# +------------------------------------------------------------------------------------------------+
# |                                            Node.js                                             |
# +------------------------------------------------------------------------------------------------+
# +----------------------------+
# | NVM (Node Version Manager) |
# +----------------------------+

export NVM_DIR="$XDG_DATA_HOME/nvm"                                  # Configure XDG Compliance
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                     # Load nvm
# [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # Load nvm bash_completion


# +------------------------------------------------------------------------------------------------+
# |                                                                                                |
# +------------------------------------------------------------------------------------------------+
