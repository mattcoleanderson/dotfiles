[user]
  name = "Matt Cole Anderson"
  email = "github@mattcoleanderson.com"
  signingkey = ~/.ssh/id_ed25519.pub

[init]
  defaultBranch = "main"

[pull]
  ff = only

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = ~/.local/config/git/allowed_signers

[commit]
  gpgsign = true

[includeIf "gitdir:~/repos/work/"]
  path = ./config-work
